@page "/"

<h1>A generic list of Person</h1>
<DataList 
	Data=@People>
	@context.Salutation @context.FamilyName, @context.GivenName
</DataList>

@code
{
	private IEnumerable<Person> People;

	protected override void OnInitialized()
	{
		base.OnInitialized();

		People = new Person[]
		{
			new Person { Salutation = "Mr", GivenName = "Jean", FamilyName = "Castadere" },
			new Person { Salutation = "Mrs", GivenName = "Isabel", FamilyName = "Castadere" },
			new Person { Salutation = "Mr", GivenName = "Jules", FamilyName = "Verne" },
			new Person { Salutation = "Mr", GivenName = "Freddie", FamilyName = "Mercury" }
		};
	}
}