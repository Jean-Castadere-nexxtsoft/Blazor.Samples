@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<p>Current count: @currentCount2</p>

<button class="btn btn-primary" @onclick=IncrementCount>Click me</button>

<MyFirstComponent 
	@bind-CurrentCounterValue=currentCount  @bind-CurrentCounterValue2=currentCount2></MyFirstComponent>

@code {

	int currentCount = 0;

	int currentCount2 = 0;

	void IncrementCount()
	{
		currentCount++;
	}
}
